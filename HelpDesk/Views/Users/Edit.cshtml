@model HelpDesk.Models.UsersEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Modify information for @Model.FirstName @Model.LastName</h2>

<br />
<ul class="nav nav-tabs">
    <li class="active"><a href="@Url.Action("Edit", "Users", new { id = Model.UserID })">Modify</a></li>
