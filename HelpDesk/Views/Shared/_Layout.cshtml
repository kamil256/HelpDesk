<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Help Desk</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        .ui-widget-overlay {
            background: black !important;
            opacity: .60 !important;
        }
        .ui-dialog {
            width: 410px !important;
            padding: 20px;
            /*text-align: left;*/
            background: white;
            /*margin: 0 auto;*/
            box-shadow: 0 0 10px #777;
            border-radius: 5px;
        }
        .ui-dialog-titlebar {
            display: none !important;
        }
        .dialog {
            display: none;
        }
        .dialog > h4 {
            text-align: center;
            margin: 0 0 20px 0;
        }
        .dialog .form-control {
            max-width: 100%;
        }
        /*.dialog*/ .btn {
            background-color: #428bca !important; 
            border-color: #428bca; 
            color: white;
        }
        /*.dialog*/ .btn:hover {
            color: white;
        }
        .dialog > h4 > i {
            color:#89c402;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse @*navbar-fixed-top*@">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Help Desk", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class=@(ViewBag.Title == "New user" ? "active" : "")>@Html.ActionLink("New user", "Create", "Users")</li>
                    <li class=@(ViewBag.Title == "Users" ? "active" : "")>@Html.ActionLink("Users", "Index", "Users")</li>
                    <li class=@(ViewBag.Title == "New ticket" ? "active" : "")>@Html.ActionLink("New ticket", "Create", "Tickets")</li>
                    <li class=@(ViewBag.Title == "Tickets" ? "active" : "")>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                    <li class=@(ViewBag.Title == "Settings" ? "active" : "")><a href="#">Settings</a></li>                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="acontainer body-content" style="background-color: #f0f0f0">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>    
</body>
</html>